@using E_ticaret_sitesi.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">

    <tr>
        <th>ID</th>
        <th>Ürün</th> 
        <th>Cari</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
         

    </tr>

    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Satisid </td>
            <td>@k.Urun.UrunAd </td>
            <td>@k.Cariler.CariAd  @k.Cariler.CariSoyad </td>
            <td>@k.Personel.PersonelAd @k.Personel.PersonelSoyad </td>
            <td>@k.Adet </td> 
            <td>@k.Fiyat </td> 
            <td>@k.ToplamTutar </td> 
            <td>@k.Tarih </td> 
            @* KategoriController altında bulunan KategorSil git k.KategoriId ye göre*@
            <td><a href="/Personel/PersonelGetir/@k.Personelid" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@k.Personelid" class="btn btn-default" style="background-color:cadetblue; color:azure;">Detaylar</a></td>

        </tr>
    }
</table>
<a href="/Satis/YeniSatis/" class="btn btn-info">Yeni Satış Yap</a>

