@model E_ticaret_sitesi.Models.Siniflar.KargoDetay
@{
    ViewBag.Title = "YeniKargo";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />

<h2>Yeni Kargo Bilgisi</h2>

<br />

<form class="form-group" method="post">
    @* Html hazır format kulanma Html Helper *@
    @Html.LabelFor(x => x.TakipKodu)
    <input type="text" name="TakipKodu" class="form-control" value="@ViewBag.takipkod"/>
    <br />

    @Html.LabelFor(x => x.Personel)
    @Html.TextBoxFor(x => x.Personel, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.Alici)
    @Html.TextBoxFor(x => x.Alici, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.Tarih)
    <input class="form-control" type="date" name="Tarih" />
    <br />
    @Html.LabelFor(x => x.Aciklama)
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
    <br />

    <button class="btn btn-info">Kaydet</button>

</form>




