@using E_ticaret_sitesi.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">

    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>

    </tr>

    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Personelid </td>
            <td>@k.PersonelAd </td>
            <td>@k.PersonelSoyad </td>
            <td>@k.PersonelGorsel </td>
            <td>@k.Departman.DepartmanAd </td> 
            @* KategoriController altında bulunan KategorSil git k.KategoriId ye göre*@ 
            <td><a href="/Personel/PersonelGetir/@k.Personelid" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@k.Personelid" class="btn btn-default" style="background-color:cadetblue; color:azure;">Detaylar</a></td>

        </tr>
    }
</table>
<a href="/Personel/PersonelEkle/" class="btn btn-info">Personel Ekle</a>



