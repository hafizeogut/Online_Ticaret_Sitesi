@using E_ticaret_sitesi.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
} 
<table class="table table-bordered" style="margin-top:20px;">

    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Takip Kodu</th>
        <th>Tarih</th>

        <th>Detaylar</th>

    </tr>

    @foreach (var k in Model)
    {
    <tr>
        <td>@k.Personel </td>
        <td>@k.Alici </td>
        <td>@k.TakipKodu </td>
        <td>@k.Tarih </td>

        @* KategoriController altında bulunan KategorSil git k.KategoriId ye göre*@
        <td><a href="/Kargo/KargoTakip/@k.TakipKodu" class="btn btn-default" style="background-color:cadetblue; color:azure;">Detaylar</a></td>

    </tr>
    }
</table>
<a href="/Kargo/YeniKargo" class="btn btn-info">Yeni Kargo Girişi</a>


