@model IEnumerable<E_ticaret_sitesi.Models.Siniflar.SinifGrup3>
@*  Razor sayfasının modelini belirler. Bu sayfa modeli, IEnumerable<T> türünden bir koleksiyon olmalıdır
    ve bu koleksiyonun elemanları, E_ticaret_sitesi.Models.Siniflar.SinifGrup3 sınıfına ait nesnelerdir. *@

@* <E_ticaret_sitesi.Models.Siniflar.SinifGrup3> kısmı, bu koleksiyonun elemanlarının SinifGrup3 türünden nesneler olduğunu belirtir. *@
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ürün Marka Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody> 
                @* Hangi kullanıcının ne yopunlukta hangi sehirde bulunduğu istatiksel olarak yansıt *@
                @{int sirano = 0;}

                @foreach (var x in Model)
                {

                    <tr>
                        <td>@{sirano++;} @sirano  </td>
                        <td>@x.marka</td>
                        <td>
                            @if (x.sayi >= 1 && x.sayi <=3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 45%"></div>
                                </div>
                            }
                            @if (x.sayi >= 4 && x.sayi <= 6)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 60%"></div>
                                </div>
                            }
                            @if (x.sayi >= 7)
                            {
                                <div class="progress progress-xs progress-bar-striped active">
                                    <div class="progress-bar  bg-success" style="width: 80%"></div>
                                </div>
                            }

                        </td>
                        <td>
                            @if (x.sayi >= 1 && x.sayi <= 3)
                            {
                                <span class="badge bg-danger">@x.sayi</span>
                            }
                            @if (x.sayi >= 4 && x.sayi <= 6)
                            {
                                <span class="badge bg-warning">@x.sayi</span>
                            }
                            @if (x.sayi >= 7)
                            {
                                <span class="badge bg-success">@x.sayi</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>