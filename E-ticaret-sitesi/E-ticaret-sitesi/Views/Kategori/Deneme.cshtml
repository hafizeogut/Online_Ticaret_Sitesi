@model E_ticaret_sitesi.Models.Siniflar.Class3
@{
    ViewBag.Title = "Deneme";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>

    $(function () {

        $('#drpKategori').change(function () {

            var id = $('#drpKategori').val();

            $.ajax({

                url: '/Kategori/UrunGetir',

                data: { p: id },

                type: "POST",

                dataType: "Json",

                success: function (data) {

                    console.log(data);

                    $('#drpUrun').empty();

                    for (var i = 0; i < data.length; i++) {

                        $('#drpUrun').append("<option value='" + data[i].Value + "'>" + data[i].Text + "</Option>");

                    }

                }

            });

        });

    });

</script>
<br /> 

<div>
    <h2>Kategoriler - Ürünler</h2>
</div>
<br />
<div>

    @Html.Label("Kategoriler")
    @Html.DropDownList("drpKategori", Model.Kategoriler, "--Kategori Seç---", new { @class = "form-control" })

    <br />

    @Html.Label("ürünler")
    @Html.DropDownList("drpUrun", Model.Urunler, "--Ürün Seç---", new { @class = "form-control" })
</div>